{
  "name": "CrmeryDragAndDrop",
  "version": "1.0.0",
  "description": "Drag and Drop file upload for Crmery",
  "main": "index.js",
  "author": "James Kraus",
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.25.0",
    "babel-plugin-flow-react-proptypes": "^4.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "react": "16.0.0-beta.2",
    "react-dom": "16.0.0-beta.2",
    "regenerator-runtime": "^0.10.5",
    "styled-components": "^2.1.1",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "eslint": "^4.3.0",
    "eslint-plugin-flowtype": "2.34.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "flow-bin": "^0.52.0",
    "jest": "^20.0.4",
    "prettier": "^1.5.3",
    "react-test-renderer": "^15.6.1",
    "webpack": "^3.4.1"
  },
  "scripts": {
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "test": "jest",
    "lint": "eslint ./src/",
    "lint:fix": "eslint ./src/ --fix",
    "p": "prettier --write --no-semi --single-quote --trailing-comma es5 \"src/**/*.js\"",
    "p:nowrite": "prettier --no-semi --single-quote --trailing-comma es5 \"src/**/*.js\"",
    "check-commit": "yarn test && yarn flow && yarn lint:fix && yarn p",
    "ci": "yarn test -- --coverage && yarn flow && yarn lint && yarn p:nowrite"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/testPolyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx"
    ]
  }
}
